---
/*
  index.astro
*/
import MainLayout from '../layouts/MainLayout.astro';

const posts = [
  { 
    id: 1,
    title: "How to Create an E-Commerce Analytics System?", 
    date: "March 31"
  },
 
];
---

<MainLayout title="Home | Egehan Yamçı">
  
  <!-- Hero Section -->
  <header class="hero">
    <div class="hero-content">
      <h1>Hey, I'm Egehan!</h1>
      <p class="intro">
        I’m a MIS student with a focus on software development, data analysis, and machine learning. 
        Recently, I started <a href="#" class="highlight">writing this blog</a> where I share what I learn and build along the way.
      </p>
      <p class="sub-intro"></p>
    </div>
  </header>

  <!-- Blog Section -->
  <section class="blog-section">
    <h2>Blog</h2>
    <p class="section-subtitle">My writings.</p>

    <div class="post-list">
      {posts.map(post => (
        <a href={`/posts/${post.id}`} class="post-item">
          <time class="post-date">{post.date}</time>
          <span class="post-title">{post.title}</span>
        </a>
      ))}
    </div>
  </section>

</MainLayout>

<style>
  /* HERO STYLES */
  .hero {
    margin-bottom: 4rem;
    max-width: 800px;
  }

  .hero h1 {
    font-size: 3.5rem;
    font-weight: 800;
    color: var(--text-primary);
    margin-bottom: 1.5rem;
    line-height: 1.1;
  }

  .intro {
    font-size: 1.25rem;
    color: var(--text-primary);
    line-height: 1.7;
    margin-bottom: 1rem;
  }

  .sub-intro {
    font-size: 1.1rem;
    color: var(--text-secondary);
  }

  .highlight {
    color: var(--accent-color);
    text-decoration: none;
  }

  /* BLOG SECTION STYLES */
  .blog-section h2 {
    font-size: 2rem;
    font-weight: 800;
    color: var(--text-primary);
    margin-bottom: 0.5rem;
  }

  .section-subtitle {
    font-size: 1.2rem;
    color: var(--text-secondary);
    margin-bottom: 2rem;
  }

  .post-list {
    display: flex;
    flex-direction: column;
    gap: 0; /* Gap'i sıfırladık, çizgiler birbirine değsin */
  }

  .post-item {
    display: grid;
    grid-template-columns: 100px 1fr; 
    gap: 1rem; 
    align-items: baseline;
    
    /* Row compactness */
    padding: 0.2rem 1rem; 
    
    margin: 0 -1rem; 
    
    /* Line adjustment */
    border-bottom: 1px solid var(--border-color);
    
    border-radius: 1px;
    text-decoration: none; 
    color: inherit;
    transition: background-color 0.2s ease;
  }

  /* Remove the line under the last element */
  .post-item:last-child {
    border-bottom: none;
  }

  /* Hover effects */
  .post-item:hover {
    background-color: var(--hover-bg);
    text-decoration: none; 
    cursor: pointer;
    /* Hover olunca border rengiyle oynamıyoruz, sabit kalıyor */
  }

  .post-date {
    font-size: 1rem;
    color: var(--text-secondary);
    font-family: var(--font-body);
    white-space: nowrap; 
  }

  .post-title {
    font-size: 1rem;
    font-weight: 700;
    color: var(--accent-color);
    text-decoration: none; 
  }
  
  .post-item:hover .post-title {
    text-decoration: none;
  }

  @media (max-width: 768px) {
    .hero h1 {
      font-size: 2.5rem;
    }

    .post-item {
      display: flex;
      flex-direction: column;
      gap: 0.2rem;
      padding: 0.8rem 0; 
      margin: 0;
      border-bottom: 1px solid var(--border-color); /* Show line on mobile too */
      border-radius: 0;
    }

    .post-item:hover {
      background-color: transparent;
    }

    .post-date {
      font-size: 0.9rem;
    }
  }
</style>