---
/* src/components/ThemeToggle.astro
  Handles switching between Light, Dark, and Tokyo Night themes.
  Includes inline SVGs for the icons.
*/
---

<button id="theme-toggle" aria-label="Switch Theme" class="toggle-btn">
  <!-- Sun Icon (Light Mode) -->
  <svg class="icon sun-icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" 
  stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-sun-icon lucide-sun">
  <circle cx="12" cy="12" r="4"/>
  <path d="M12 2v2"/>
  <path d="M12 20v2"/>
  <path d="m4.93 4.93 1.41 1.41"/>
  <path d="m17.66 17.66 1.41 1.41"/>
  <path d="M2 12h2"/>
  <path d="M20 12h2"/>
  <path d="m6.34 17.66-1.41 1.41"/>
  <path d="m19.07 4.93-1.41 1.41"/>
</svg>

  <!-- Moon Icon (Dark Mode) -->
  <svg class="icon moon-icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" 
  stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-moon-icon lucide-moon">
  <path d="M20.985 12.486a9 9 0 1 1-9.473-9.472c.405-.022.617.46.402.803a6 6 0 0 0 8.268 8.268c.344-.215.825-.004.803.401"/>
</svg>

  <!-- Cloud Icon (Tokyo Night) -->
  <svg class="icon tokyo-icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" 
  stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-cloud-icon lucide-cloud">
  <path d="M17.5 19H9a7 7 0 1 1 6.71-9h1.79a4.5 4.5 0 1 1 0 9Z"/>
</svg>
</button>

<style>
  .toggle-btn {
    background: transparent;
    border: none;
    cursor: pointer;
    color: var(--text-primary);
    padding: 0.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: color 0.3s ease;
  }

  .toggle-btn:hover {
    color: var(--accent-color);
  }

  .icon {
    display: none; /* Hide all by default */
  }

  /* Logic to show correct icon based on global theme attribute */
  :global([data-theme="light"]) .sun-icon { display: block; }
  :global([data-theme="dark"]) .moon-icon { display: block; }
  :global([data-theme="tokyo"]) .tokyo-icon { display: block; }
</style>

<script>
  // Client-side logic for switching themes
  const themes = ['light', 'dark', 'tokyo'];
  const btn = document.getElementById('theme-toggle');

  if (btn) {
    btn.addEventListener('click', () => {
      const html = document.documentElement;
      
      // Default dark
      const currentTheme = html.getAttribute('data-theme') || 'dark';
      
      // Calculate next theme index
      const currentIndex = themes.indexOf(currentTheme);
      const nextIndex = (currentIndex + 1) % themes.length;
      const nextTheme = themes[nextIndex];

      // Apply and Save
      html.setAttribute('data-theme', nextTheme);
      localStorage.setItem('theme', nextTheme);
    });
  }
</script>