---
/*
  src/components/Sidebar.astro
*/
import ThemeToggle from './ThemeToggle.astro';

const navLinks = [
  { name: 'Blog', href: '/blog' },
  { name: 'Projects', href: '/projects' },
  { name: 'About Me', href: '/about' },
];
---

<aside class="sidebar" id="main-sidebar">
  <div class="sidebar-content">
    
    <!-- Header: Name & Theme Toggle & Mobile Menu -->
    <div class="sidebar-header">
      <div class="brand-container">
        <a href="/" class="brand-name">Egehan Yamçı</a>
      </div>
      
      <div class="header-actions">
        <ThemeToggle />
        
        <!-- Mobile Menu Button -->
        <button id="mobile-menu-btn" class="mobile-menu-btn" aria-label="Toggle Menu">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <line x1="3" y1="12" x2="21" y2="12"></line>
            <line x1="3" y1="6" x2="21" y2="6"></line>
            <line x1="3" y1="18" x2="21" y2="18"></line>
          </svg>
        </button>
      </div>
    </div>

    <!-- MOBILE CONTAINER: Menu (Nav + Contact) -->
    <div id="sidebar-nav-container" class="sidebar-nav-container">
      
      <div class="separator"></div>

      <!-- Main Navigation -->
      <nav class="nav-links">
        {navLinks.map((link) => (
          <a href={link.href} class="nav-item">
            <span class="nav-text">{link.name}</span>
          </a>
        ))}
      </nav>

      <!-- SEPARATOR LINE (Before Contact) -->
      <div class="separator"></div>

      <!-- Contact Section (Right below navigation) -->
      <div class="contact-section">
        <span class="contact-title">Contact</span>
        <div class="contact-links">
          
          <a href="mailto:contact@egehanyamci.dev" class="contact-item">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="contact-icon">
              <rect width="20" height="16" x="2" y="4" rx="2"/><path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/>
            </svg>
            <span>Email</span>
          </a>

          <a href="https://github.com/Egehan134" target="_blank" class="contact-item">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="contact-icon">
              <path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"/><path d="M9 18c-4.51 2-5-2-7-2"/>
            </svg>
            <span>GitHub</span>
          </a>

          <a href="https://www.linkedin.com/in/egehan-yam%C3%A7%C4%B1/" target="_blank" class="contact-item">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="contact-icon">
              <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"/><rect x="2" y="9" width="4" height="12"/><circle cx="4" cy="4" r="2"/>
            </svg>
            <span>LinkedIn</span>
          </a>

        </div>
      </div>
    </div> <!-- End sidebar-nav-container -->

  </div>
</aside>

<script>
  // Mobile menu open/close logic
  const menuBtn = document.getElementById('mobile-menu-btn');
  const navContainer = document.getElementById('sidebar-nav-container');
  const sidebar = document.getElementById('main-sidebar');

  if (menuBtn && navContainer && sidebar) {
    menuBtn.addEventListener('click', () => {
      // Toggle container
      const isExpanded = navContainer.style.display === 'flex';
      
      if (isExpanded) {
        navContainer.style.display = ''; // Return to CSS (none on mobile, flex on desktop)
        sidebar.classList.remove('expanded');
      } else {
        navContainer.style.display = 'flex'; // Make visible
        sidebar.classList.add('expanded');
      }
    });
  }
</script>

<style>
  .sidebar {
    width: 250px;
    height: 100vh;
    background-color: var(--sidebar-bg);
    border-right: 1px solid var(--border-color);
    position: sticky;
    top: 0;
    display: flex;
    flex-direction: column;
    padding: 2rem 1.5rem;
    transition: background-color 0.3s ease, border-color 0.3s ease, height 0.3s ease;
    z-index: 50;
  }

  .sidebar-content {
    display: flex;
    flex-direction: column;
    height: 100%;
    width: 100%;
  }

  .sidebar-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 0rem;
    flex-shrink: 0;
  }

  .header-actions {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .brand-name {
    font-size: 1.2rem;
    font-weight: 700;
    color: var(--text-primary);
    text-decoration: none;
  }

  /* Mobile Menu Button (Hidden by default) */
  .mobile-menu-btn {
    display: none; 
    background: none;
    border: none;
    color: var(--text-primary);
    cursor: pointer;
    padding: 0.25rem;
  }
  
  .mobile-menu-btn:hover {
    color: var(--accent-color);
  }

  /* Navigation Container (Desktop: Flex, Mobile: Collapsible) */
  .sidebar-nav-container {
    display: flex;
    flex-direction: column;
    flex-grow: 1;
  }

  .separator {
    height: 1px;
    background-color: var(--border-color);
    margin: 1.5rem 0;
    opacity: 0.6;
    flex-shrink: 0;
  }

  .nav-links {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .nav-item {
    display: block;
    padding: 0.75rem 1rem;
    border-radius: 8px;
    color: var(--text-secondary);
    font-weight: 500;
    transition: all 0.2s ease;
    text-decoration: none;
  }

  .nav-item:hover {
    background-color: var(--hover-bg);
    color: var(--text-primary);
    transform: translateX(4px);
  }

  /* --- CONTACT SECTION STYLES --- */
  .contact-section {
    display: flex;
    flex-direction: column;
  }

  .contact-title {
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--text-primary);
    opacity: 0.7;
    margin-bottom: 0.5rem;
    padding-left: 1rem; 
    display: block;
    font-weight: 600;
  }

  .contact-links {
    display: flex;
    flex-direction: column; 
    gap: 0.5rem; 
  }

  .contact-item {
    display: flex;
    align-items: center;
    gap: 12px;
    font-size: 0.95rem; 
    color: var(--text-secondary);
    text-decoration: none;
    transition: all 0.2s ease;
    padding: 0.75rem 1rem; 
    border-radius: 8px;
  }

  .contact-item:hover {
    color: var(--text-primary);
    background-color: var(--hover-bg);
    transform: translateX(4px); 
  }

  .contact-icon {
    opacity: 0.7;
    width: 18px; 
    height: 18px;
  }

  /* RESPONSIVE */
  @media (max-width: 768px) {
    .sidebar {
      width: 100%;
      height: auto;
      min-height: auto;
      position: sticky;
      top: 0;
      border-right: none;
      border-bottom: 1px solid var(--border-color);
      padding: 1rem 1.5rem;
    }
    
    .sidebar.expanded {
      height: 100vh;
      position: fixed; 
      overflow-y: auto;
    }

    /* Mobile menu button visible */
    .mobile-menu-btn {
      display: block;
    }

    /* Mobile: content hidden by default */
    .sidebar-nav-container {
      display: none;
      margin-top: 1rem;
      padding-bottom: 2rem;
    }
  }
</style>