---
/*
  src/layouts/MainLayout.astro
*/
import '../styles/global.css';
import Sidebar from '../components/Sidebar.astro';

interface Props {
  title: string;
  maxWidth?: string;
}

const { title, maxWidth = '900px' } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <!-- FAVICON UPDATE -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    
    <title>{title}</title>
    <script is:inline>
      const theme = localStorage.getItem('theme');
      if (theme) {
        document.documentElement.setAttribute('data-theme', theme);
      } else {
        document.documentElement.setAttribute('data-theme', 'dark');
      }
    </script>
  </head>
  <body>
    <div class="container">
      <Sidebar />
      
      <main class="main-content" style={`max-width: ${maxWidth};`}>
        
        <slot />

        <!-- DIVIDER -->
        <div class="footer-separator"></div>

        <!-- FOOTER -->
        <footer class="page-footer">
          <p>Made by Egehan Yamçı</p>
        </footer>
      </main>
    </div>
  </body>
</html>

<style>
  .main-content {
    flex-grow: 1;
    padding: 2rem 1.5rem; 
    width: 100%; 
    margin: 0 auto; 
    display: flex;
    flex-direction: column;
    min-height: 100vh; 
  }

  /* DIVIDER AND FOOTER STYLES */
  .footer-separator {
    width: 100%;
    border-top: 1px solid var(--border-color);
    margin-top: 4rem; 
    margin-bottom: 2rem;
    display: block;
  }

  .page-footer {
    color: var(--text-secondary);
    font-size: 0.95rem;
    margin-bottom: 1rem; 
  }

  @media (max-width: 768px) {
    .main-content {
      padding: 1.5rem;
    }
  }
</style>